<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_gravity="bottom"
    android:background="@drawable/bottomsheet"
    android:id="@+id/instruc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sebelum melakukan penyewaan, kamu harus ingat hal berikut :"
            android:fontFamily="@font/bold"
            android:textColor="@color/h1"
            android:textSize="18dp" 
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:layout_width="33dp"
            android:layout_height="40dp"
            android:src="@drawable/form"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="23dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pastikan sudah membaca dan memahami syarat dan ketentuan yang berlaku. Dengan melakukan penyewaan, berarti kamu setuju dengan segala hal yang kami telah atur."
            android:layout_marginTop="105dp"
            android:layout_marginLeft="80dp"
            android:textSize="13dp"
            android:fontFamily="@font/regular"
            android:textColor="@color/h1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:src="@drawable/rambu"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="14dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selalu mematuhi aturan dan rambu lalu lintas yang ada. Jangan coba - coba melanggar ya!"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="80dp"
            android:textSize="13dp"
            android:fontFamily="@font/regular"
            android:textColor="@color/h1"/>
        
        <ImageView
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:src="@drawable/security"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="14dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keselamatan dan keamanan adalah nomor satu. Jadi harus dijaga baik - baik ya!"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="80dp"
            android:textSize="13dp"
            android:fontFamily="@font/regular"
            android:textColor="@color/h1" />

    </RelativeLayout>

    <Button
        android:layout_width="275dp"
        android:layout_height="53dp"
        android:background="@drawable/button1"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Konfirmasi Penyewaan"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:textColor="@color/putih"
        android:fontFamily="@font/bold"
        android:id="@+id/button_confirmsewa"
        android:foreground="?android:selectableItemBackground"/>


</LinearLayout>