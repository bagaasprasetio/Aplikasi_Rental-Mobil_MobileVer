<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".beranda"
    android:background="#E9E9E9">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_image"
        android:adjustViewBounds="true"
        android:visibility="invisible"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh_beranda">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:id="@+id/shimmer_greeting">
                <View
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shimmer"
                    android:layout_gravity="center"/>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <TextView
                android:id="@+id/txtusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="Username"
                android:textColor="@color/putih"
                android:textSize="23dp"
                android:layout_marginTop="50dp"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/beranda"
                    android:orientation="vertical"
                    android:layout_marginTop="330dp">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="9dp"
                        android:background="@drawable/shimmer"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp">
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fitur Sewa Buatmu"
                            android:fontFamily="@font/bold"
                            android:textColor="@color/h1"
                            android:textSize="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btn_lepaskunci"
                                android:layout_width="139dp"
                                android:layout_height="161dp"
                                android:background="@drawable/lepaskunci"
                                android:foreground="?android:attr/selectableItemBackground" />

                            <Button
                                android:id="@+id/btn_driver"
                                android:layout_width="139dp"
                                android:layout_height="161dp"
                                android:layout_marginLeft="150dp"
                                android:background="@drawable/dengandriver"
                                android:foreground="?android:attr/selectableItemBackground" />

                            <Button
                                android:id="@+id/btn_riwayat"
                                android:layout_width="139dp"
                                android:layout_height="161dp"
                                android:layout_marginTop="170dp"
                                android:background="@drawable/riwayat"
                                android:foreground="?android:attr/selectableItemBackground" />

                            <Button
                                android:id="@+id/btn_akun"
                                android:layout_width="139dp"
                                android:layout_height="161dp"
                                android:layout_marginLeft="150dp"
                                android:layout_marginTop="170dp"
                                android:background="@drawable/akun"
                                android:foreground="?android:attr/selectableItemBackground" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Info Buatmu"
                            android:fontFamily="@font/bold"
                            android:textSize="20dp"
                            android:textColor="@color/h1"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="40dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/banner_empty"
                            android:visibility="gone">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="138dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/empty" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/regular"
                                android:text="Ooops, tidak ada data tersedia"
                                android:textColor="@color/h1"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/shimmer_banner">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <View
                                    android:layout_width="330dp"
                                    android:layout_height="180dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/shimmer" />
                                <View
                                    android:layout_width="200dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/shimmer"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="15dp"/>
                                <View
                                    android:layout_width="330dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/shimmer"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="15dp" />
                                <View
                                    android:layout_width="330dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/shimmer"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="15dp" />

                            </LinearLayout>
                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/recy_banner">
                        </androidx.recyclerview.widget.RecyclerView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</RelativeLayout>




