<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:background="@drawable/bottomsheet"
    android:layout_gravity="bottom"
    android:id="@+id/wrongPassContainer">
    
    <ImageView
        android:layout_width="201dp"
        android:layout_height="134dp"
        android:src="@drawable/restrict"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ooops, ada yang salah nih"
        android:textColor="@color/h1"
        android:fontFamily="@font/bold"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Username atau password yang kamu masukkan salah, coba cek lagi ya!"
        android:fontFamily="@font/regular"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_width="272dp"
        android:layout_height="46dp"
        android:background="@drawable/buttonok"
        android:text="Coba lagi yuk!"
        android:textColor="@color/putih"
        android:fontFamily="@font/bold"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/button_tryagain"/>

</LinearLayout>