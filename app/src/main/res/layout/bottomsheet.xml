<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:padding="15dp"
    android:background="@drawable/bottomsheet"
    android:id="@+id/bottomsheet_container">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/lostconnect"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak Ada Koneksi Internet"
        android:fontFamily="@font/bold"
        android:textSize="22dp"
        android:textColor="@color/h1"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sinyal internetmu hilang nih, coba dicek dulu ya!"
        android:fontFamily="@font/tommyreg"
        android:textSize="18dp"
        android:layout_marginTop="-5dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Coba lagi"
        android:background="@drawable/button1"
        android:textColor="@color/putih"
        android:fontFamily="@font/bold"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:foreground="?android:selectableItemBackground"
        android:id="@+id/try_internet"/>

</LinearLayout>