<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    android:id="@+id/empty_contain"
    android:theme="@style/intro">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tidak ada data tersedia :("
                android:fontFamily="@font/bold"
                android:textColor="@color/h1"
                android:gravity="center"
                android:textSize="22dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sepertinya kamu belum pernah melakukan perentalan, Yuk Coba Sekarang!"
                android:fontFamily="@font/regular"
                android:textColor="@color/abu"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_marginTop="0dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="387dp"
                android:src="@drawable/kosong"
                android:layout_marginLeft="-100dp"
                android:layout_marginRight="-100dp"
                android:layout_marginTop="120dp"/>
            <Button
                android:layout_width="319dp"
                android:layout_height="50dp"
                android:text="Yuk Cobain"
                android:textSize="17dp"
                android:textAllCaps="false"
                android:fontFamily="@font/bold"
                android:background="@drawable/buttonputih"
                android:textColor="#3C8A1C"
                android:layout_marginTop="-120dp"
                android:layout_gravity="center"
                android:foreground="?android:selectableItemBackground"
                android:id="@+id/try_rent"/>

        </LinearLayout>



</LinearLayout>